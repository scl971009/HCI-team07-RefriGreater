<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@color/toolbar"
        app:itemIconTint="@android:color/black"
        app:itemTextColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />
    
    <ImageView
        android:layout_width="936px"
        android:layout_height="261px"
        android:src="@drawable/recipe_search_bar"
        android:layout_marginTop="48px"
        android:layout_marginStart="72px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <Button
        android:id="@+id/shake"
        android:layout_width="972px"
        android:layout_height="270px"
        android:background="@drawable/mangoshake"
        android:layout_marginTop="330px"
        android:layout_marginStart="54px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/shakestar"
        android:layout_width="54.27px"
        android:layout_height="54.27px"
        android:background="@drawable/star"
        android:layout_marginTop="523.5px"
        android:layout_marginStart="952.23px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/ice"
        android:layout_width="972px"
        android:layout_height="270px"
        android:background="@drawable/mango_ice"
        android:layout_marginTop="642px"
        android:layout_marginStart="54px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/icestar"
        android:layout_width="54.27px"
        android:layout_height="54.27px"
        android:background="@drawable/unstar"
        android:layout_marginTop="835.5px"
        android:layout_marginStart="952.23px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>